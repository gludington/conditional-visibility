<h2>Conditional Visibility</h2>
<p class="notes">
  {{localize "conditional-visibility.help.gamesystem"}} : {{gamesystem}}, {{localize
  "conditional-visibility.help.hasStealth"}}: {{hasStealth}}
</p>
{{#if hasStealth}}
<p class="notes">{{localize "conditional-visibility.settings.autoStealth.name"}} : {{autoStealth}}</p>
{{/if}}
<table>
  <thead>
    <tr>
      <th colspan="2">{{localize "conditional-visibility.help.availableconditions"}}</th>
    </tr>
  </thead>
  <tbody>
    {{#each conditions as |value idx|}}
    <tr>
      <td>{{value.name}}</td>
      <td align="center" bgcolor="#000000"><img src="{{value.icon}}" width="24" height="24" alt="{{value.icon}}" /></td>
    </tr>
    {{/each}}
  </tbody>
</table>
<p class="notes">
  {{localize "conditional-visibility.help.readmeat"}}
  <a href="https://github.com/gludington/conditional-visibility/blob/master/README.md">README</a>
</p>
